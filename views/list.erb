<h1><%= @list.name() %></h1>
<% if @list.tasks().any?() %>
  <h3>Here are all the tasks in this lists:</h3>
  <ul>
    <% @list.tasks().each() do |task| %>
    <li><%= task.description() %> - due_date <%= task.due_date() %> [<a href="/delete_task/<%= task.list_id()%>">x</a>]</li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks on this list!</p>


<% end %>

<h3>Add a task to <%= @list.name() %></h3>

<form action="/tasks" method="post">
  <input for="list_id" name="list_id" type="hidden" value="<%= @list.id() %>">

  <label for="description">Description of the task:</label>
  <input id="description" name="description" type="text">
  <label for="due_date">Task due date:</label>
  <input id="due_date" name="due_date" type="text">

  <button type="submit">Add task</button>
</form>

<div class="container">
  <a href="/">Home</a>
  <a href="/lists/new">Add New List</a>
  <a href="/lists/new">Add New Task</a>
</div>
